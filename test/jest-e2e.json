{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!random-words)"],
  "setupFilesAfterEnv": ["./config/jest-e2e-setup.ts"],
  "detectOpenHandles": true,
  "forceExit": true
}
